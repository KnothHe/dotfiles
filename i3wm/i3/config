# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape or $mod+r
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}

bindsym $mod+r mode "resize"

mode "mode_launcher" {
    bindsym a exec xfce4-appfinder, mode "default"
    bindsym b exec calibre, mode "default"
    bindsym c exec google-chrome-stable, mode "default"
    bindsym e exec emacs, mode "default"
    bindsym f exec firefox, mode "default"
    bindsym g exec gimp, mode "default"
    bindsym h exec thunar, mode "default"
    bindsym i exec idea, mode "default"
    bindsym n exec nm-applet, mode "default"
    bindsym p exec pycharm, mode "default"
    bindsym q exec qtcreator, mode "default"
    bindsym r exec ristretto ~/Pictures/wallpapers, mode "default"
    bindsym s exec xfce4-settings-manager, mode "default"
    bindsym t exec xfce4-taskmanager, mode "default"
    bindsym v exec code, mode "default"
    bindsym z exec zeal, mode "default"

    bindsym Escape mode "default"
    bindsym Return mode "default"
}
bindsym $mod+o mode "mode_launcher"

# chrome app launch
mode "mode_chrome_app" {
    bindsym g exec google-chrome-stable --app=https://www.github.com/, mode "default"
    bindsym f exec google-chrome-stable --app=https://translate.google.cn/, mode "default"
    bindsym h exec google-chrome-stable --app=https://news.ycombinator.com/, mode "default"
    bindsym i exec google-chrome-stable --app=https://www.instagram.com/, mode "default"
    bindsym m exec google-chrome-stable --app=https://mail.google.com/mail/u/0/#, mode "default"
    bindsym r exec google-chrome-stable --app=https://www.reddit.com/, mode "default"
    bindsym t exec google-chrome-stable --app=https://twitter.com/, mode "default"
    bindsym y exec google-chrome-stable --new-window https://www.youtube.com/, mode "default"
    bindsym w exec google-chrome-stable --app=https://wx.qq.com/, mode "default"

    bindsym Escape mode "default"
    bindsym Return mode "default"
}
bindsym $mod+c mode "mode_chrome_app"

# screenshot
set $mode_screen (p) screen, (c) pick color, (w) current window
mode "$mode_screen" {
    bindsym p exec flameshot gui, mode "default"
    bindsym c exec deepin-picker, mode "default"
    bindsym w exec xfce4-screenshooter -w, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+p mode "$mode_screen"
bindsym Print           exec flameshot full -c -p ~/Pictures/flameshot/full

# system
set $mode_system System (l)ock, (e)xit, (s)uspend, (h)ibernate, (r)eboot, (p)ower off
mode "$mode_system" {
    bindsym l exec --no-startup-id i3exit lock, mode "default"
    bindsym e exec --no-startup-id i3exit logout, mode "default"
    bindsym s exec --no-startup-id i3exit suspend, mode "default"
    bindsym h exec --no-startup-id i3exit hibernate, mode "default"
    bindsym r exec --no-startup-id i3exit reboot, mode "default"
    bindsym p exec --no-startup-id i3exit shutdown, mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+Shift+x mode "$mode_system"

