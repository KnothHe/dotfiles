# toggle bar
# set $mode_bar (t) toggle top bar, (b) toggle bottom bar, (s) show all bars, (h) hide all bars, (r) restart all bar
set $mode_bar Bar
mode "$mode_bar" {
    bindsym t exec $polybar top,        mode "default"
    bindsym b exec $polybar bottom,     mode "default"
    bindsym s exec $polybar restart,    mode "default"
    bindsym h exec $polybar hide,       mode "default"
    bindsym r exec $polybar restart,    mode "default"

    # back to normal: Enter or Escape
    bindsym Escape mode "default"
    bindsym Return mode "default"
}
bindsym $mod+b mode "$mode_bar"

