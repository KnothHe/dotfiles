# Move focused container to flating workspace
set $mode_float_workspaces Float WorkSpace
mode "$mode_float_workspaces" {
    bindsym 1, workspace $ws11, mode "default"
    bindsym 2, workspace $ws12, mode "default"
    bindsym 3, workspace $ws13, mode "default"
    bindsym 4, workspace $ws14, mode "default"
    bindsym 5, workspace $ws15, mode "default"
    bindsym 6, workspace $ws16, mode "default"
    bindsym 7, workspace $ws17, mode "default"
    bindsym 8, workspace $ws18, mode "default"
    bindsym 9, workspace $ws19, mode "default"
    bindsym 0, workspace $ws20, mode "default"

    # back to normal: Enter or Escape or $mod+w
    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $mod+w mode "default"
}
bindsym $mod+w mode "$mode_float_workspaces"

# move container to floating workspace and move to that workspace
