# screenshot
# Dependency softwares
# xfce4-screenshooter
# scrot
# i3-scrot
set $mode_screen (c) pick color, (p) screen, (w) current window, (g) open with gimp, \
(d) delay choosing window
mode "$mode_screen" {
    bindsym c --release exec xcolor | xclip \
            && notify-send "$(xclip -o)" "has been copyed to clipboard", mode "default"
    bindsym d exec i3-scrot -w 3 \
            && scrot -u 'screenshot.png' -e 'mv $f ~/Pictures/screenshots/' \
            && xclip -selection clipboard -t 'image/png' ~/Pictures/screenshots/screenshot.png, \
            mode "default"
    bindsym g exec xfce4-screenshooter, mode "default"
    bindsym p exec flameshot gui, mode "default"
    bindsym w exec i3-scrot -w \
            && scrot -u 'screenshot.png' -e 'mv $f ~/Pictures/screenshots/' \
            && xclip -selection clipboard -t 'image/png' ~/Pictures/screenshots/screenshot.png, \
            mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+p mode "$mode_screen"
bindsym Print exec i3-scrot \
            && scrot 'screenshot.png' -e 'mv $f ~/Pictures/screenshots/' \
            && xclip -selection clipboard -t 'image/png' ~/Pictures/screenshots/screenshot.png, \
            mode "default"

# system
# set $mode_system System (l)ock, (e)xit, (s)uspend, (h)ibernate, (r)eboot, (p)ower off
set $mode_system System
mode "$mode_system" {
    bindsym l exec --no-startup-id $HOME/bin/i3exit lock,       mode "default"
    bindsym e exec --no-startup-id $HOME/bin/i3exit logout,     mode "default"
    bindsym s exec --no-startup-id $HOME/bin/i3exit suspend,    mode "default"
    bindsym h exec --no-startup-id $HOME/bin/i3exit hibernate,  mode "default"
    bindsym r exec --no-startup-id $HOME/bin/i3exit reboot,     mode "default"
    bindsym p exec --no-startup-id $HOME/bin/i3exit shutdown,   mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+Shift+x mode "$mode_system"

